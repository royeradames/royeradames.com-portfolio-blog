---
import { FigmaIcon, LinkedInIcon } from '@assets/icons';
import figmaImage from '@assets/projects/figma-project.png'; // You'll need to add your image to the assets folder
import modernImage from '@assets/projects/modern-website-project.png';
import { Image } from 'astro:assets';

const projects = [
  {
    aHref: '#',
    image: figmaImage,
    imageAlt: 'Powerful Design System',
    title: 'Powerful Design System',
    description: 'Figma UI Kit and Design System targeting a wide variety of use cases.',
    link: 'https://figma.com',
    Icon: FigmaIcon,
  },
  {
    aHref: '#',
    image: modernImage,
    imageAlt: 'Modern Website',
    title: 'Modern Website',
    description: 'Powerful website + dashboard template for your next Chakra UI project.',
    link: 'https://ui-8.net',
    Icon: LinkedInIcon,
  },
];
---

<section class="flex flex-col gap-4">
  <h2 class="text-gray-lightest font-outfit leading-16px tracking-0.12px text-6xl font-bold">
    Latest Projects
  </h2>
  <ul class="flex flex-wrap gap-4 pb-6">
    {
      projects.map((project) => (
        <li class="">
          <a
            href={project.aHref}
            class="bg-gray-darker flex max-w-md flex-col gap-2 rounded-l-lg p-3"
          >
            <div class="flex items-center justify-center gap-2">
              <Image
                src={project.image}
                width={48}
                height={48}
                alt={project.imageAlt}
                densities={[1, 2, 3]}
                format="webp"
                class="rounded-md"
              />
              <hgroup>
                <h3 class="text-gray-lightest font-mono text-3xl font-bold leading-10">
                  {project.title}
                </h3>
                <p class="text-gray-lightest tracking-0.07 font-mono text-lg font-normal leading-9">
                  {project.description}
                </p>
              </hgroup>
            </div>
            <p class="text-secondary-light flex items-center gap-2 font-sans text-base font-bold leading-10">
              <span class="bg-secondary-dark inline-flex h-4 w-4 items-center justify-center rounded-full">
                <project.Icon height="16" width="16" />
              </span>
              {project.link}
            </p>
          </a>
        </li>
      ))
    }
  </ul>
</section>
