---
import EnglishIcon from './icons/englishIcon.svg';
export interface Props {
  title?: string;
  links: {
    href: string;
    title: string;
    subTitle: string;
    icon: typeof EnglishIcon;
    iconClass?: string;
  }[];
  className?: string;
}

const { title, links, className = '' } = Astro.props;
---

<section class:list={['flex w-full flex-col gap-3 border-t border-white/10 pt-4', className]}>
  {
    title && (
      <h2 class="font-dm-sans text-2xl font-normal leading-normal tracking-wider text-gray-light">
        {title}
      </h2>
    )
  }
  <ul class="m-0 flex list-none flex-col gap-3">
    {
      links.map((link) => {
        const Icon = link.icon;
        return (
          <li>
            <a href={link.href} class="group flex items-center gap-2 self-stretch">
              <span
                class:list={[
                  'flex h-8 w-8 shrink-0 items-center justify-center rounded-full group-hover:bg-gray-darkest',
                  link.iconClass,
                ]}
              >
                <Icon class="h-4 w-4" />
              </span>
              <div>
                <p class="self-stretch font-dm-sans text-base font-normal leading-normal tracking-wider text-gray-light">
                  {link.title}
                </p>
                <p class="self-stretch font-dm-sans text-sm font-medium leading-relaxed text-gray-lighter">
                  {link.subTitle}
                </p>
              </div>
            </a>
          </li>
        );
      })
    }
  </ul>
</section>
